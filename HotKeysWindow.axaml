<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NoteApp.HotKeysWindow"
        Width="310" Height="340"
        Title="HotKeys Cool Note Pad"
        Icon="/Assets/FavIcon.ico">
    <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
        <TextBlock Text="Cool Note Pad | Hot Keys" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBlock Text="Version 1.0" />
        <Separator Margin="0,10,0,10" />
        <TextBlock Text="Create New => 'Ctrl+N' "/>
        <TextBlock Text="Open => 'Ctrl+O' "/>
        <TextBlock Text="Save => 'Ctrl+S' "/>
        <TextBlock Text="Save as => 'Ctrl+Q' "/>
        <TextBlock Text="Exit Cool Note App (please dont) => 'Ctrl+E' "/>
        <TextBlock Text="Undo Last Action => 'Ctrl+U' "/>
        <TextBlock Text="Redo Last Action => 'Ctrl+R' "/>
        <TextBlock Text="Cut => 'Ctrl+X' "/>
        <TextBlock Text="Copy => 'Ctrl+C' "/>
        <TextBlock Text="Paste => 'Ctrl+V' "/>
        <TextBlock Text="Select All => 'Ctrl+A' "/>
        <Button Content="OK" Width="80" Margin="0,15,0,0" HorizontalAlignment="Center" Click="OkClick"/>
        <Separator/>
        <TextBlock Text="Â© 2025 OppDevTeam" FontSize="12" />
        
    </StackPanel>
</Window>